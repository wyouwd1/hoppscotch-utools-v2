{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "~/*": ["../hoppscotch-common/src/*"],
      "@hoppscotch/common": ["../hoppscotch-common/src"],
      "@hoppscotch/common/*": ["../hoppscotch-common/src/*"],
      "@composables": ["../hoppscotch-common/src/composables"],
      "@composables/*": ["../hoppscotch-common/src/composables/*"],
      "@modules": ["../hoppscotch-common/src/modules"],
      "@modules/*": ["../hoppscotch-common/src/modules/*"],
      "@components": ["../hoppscotch-common/src/components"],
      "@components/*": ["../hoppscotch-common/src/components/*"],
      "@helpers": ["../hoppscotch-common/src/helpers"],
      "@helpers/*": ["../hoppscotch-common/src/helpers/*"],
      "@functional": ["../hoppscotch-common/src/helpers/functional"],
      "@functional/*": ["../hoppscotch-common/src/helpers/functional/*"],
      "@workers": ["../hoppscotch-common/src/workers"],
      "@workers/*": ["../hoppscotch-common/src/workers/*"],
      "@platform": ["./src/platform"],
      "@platform/*": ["./src/platform/*"],
      "@platform-components": ["./src/components"],
      "@platform-components/*": ["./src/components/*"],
      "@config": ["./src/config"],
      "@config/*": ["./src/config/*"],
      "@utils": ["./src/utils"],
      "@utils/*": ["./src/utils/*"]
    },

    /* Type definitions */
    "types": ["vite/client", "node"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "../hoppscotch-common/src/**/*.ts",
    "../hoppscotch-common/src/**/*.d.ts",
    "../hoppscotch-common/src/**/*.tsx",
    "../hoppscotch-common/src/**/*.vue"
  ],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}